@model JournalEntry
@{
    ViewData["Title"] = "Edit Note";
}
<h2>Editar nota</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div><label>Título</label><input asp-for="Title" /></div>
    <div><label>Contenido</label><textarea asp-for="Content"></textarea></div>
    <div><label>¿Pública?</label><input type="checkbox" asp-for="IsPublic" /></div>
    <button type="submit">Guardar</button>
</form>
