@page "/editentry/{id:int}"
@using DailyNotes.Models

<h2 class="page-title">Edit Entry</h2>

<div class="form-box">
    <label>Title</label>
    <input class="text-input" @bind="title" />

    <label>Content</label>
    <textarea class="text-area" rows="8" @bind="content"></textarea>

    <label class="switch-label">
        <input type="checkbox" @bind="isPublic" />
        <span>Make Public</span>
    </label>

    <button class="primary-btn">Update Entry</button>
</div>

@code {
    [Parameter] public int id { get; set; }

    string title = "Existing entry";
    string content = "Current content...";
    bool isPublic = true;
}
